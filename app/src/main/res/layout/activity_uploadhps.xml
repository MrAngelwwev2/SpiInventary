<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadhpsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/black_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir información de molde"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/uploadHps"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/upload"
                android:layout_marginTop="10dp"
                app:tint="@color/darkblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadHpsId"
                android:background="@drawable/black_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Ingresa el numero del molde"
                android:gravity="start|center_vertical"
                android:textColor="@color/darkblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadHpsNombre"
                android:background="@drawable/black_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Ingresa el nombre del molde"
                android:gravity="start|center_vertical"
                android:textColor="@color/darkblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadHpsCavidades"
                android:background="@drawable/black_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Ingresa el número de cavidades"
                android:gravity="start|center_vertical"
                android:textColor="@color/darkblue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadHpsMaterial"
                android:background="@drawable/black_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Ingresa el material"
                android:gravity="start|center_vertical"
                android:textColor="@color/darkblue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Guardar"
                android:id="@+id/saveButtonHps"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>